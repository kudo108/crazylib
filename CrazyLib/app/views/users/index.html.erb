<h1>Listing users</h1>

<table>
  <tr>
    <th>Nickname</th>
    <th>Hased password</th>
    <th>Email</th>
    <th>Register date</th>
    <th>End date</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.nickname %></td>
    <td><%= user.hased_password %></td>
    <td><%= user.email %></td>
    <td><%= user.register_date %></td>
    <td><%= user.end_date %></td>
    <td><%= user.group %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

