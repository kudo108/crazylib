<h2><%=t :change_pass%></h2>

<%= form_for(resource, :as => resource_name, :url => (password_path(resource_name) +"?locale="+params[:locale]), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, t :new_pass %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, t :confirm_new_pass %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit t :change_pass %></div>
<% end %>

<%= render "devise/shared/links" %>
