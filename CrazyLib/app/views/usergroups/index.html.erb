<h1>Listing usergroups</h1>

<table>
  <tr>
    <th><%=t :group_name%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @usergroups.each do |usergroup| %>
  <tr>
    <td><%= usergroup.group_name %></td>
    <td><%= link_to t :show, usergroup %></td>
    <td><%= link_to t :edit, edit_usergroup_path(usergroup) %></td>
    <td><%= link_to t :destroy, usergroup, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

