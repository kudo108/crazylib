<p id="notice">
	<%= notice %>
</p>
<table class="table table-bordered table-hover">
	<thead class="label-info">
		<th>ID</th>
		<th>Title</th>
		<th>Author</th>
		<th>Publisher</th>
		<th>Content</th>
		<th>Page</th>
		<th>Topic</th>
		<th>Quantity</th>
		<th>Current Quantity</th>
		<th></th>
	</thead>

	<% @books.each do |book| %>
	<tr>
		<td><%= book.id %></td>
		<td><%= book.title %></td>
		<td><%= book.author %></td>
		<td><%= book.publisher %></td>
		<td><%= book.brief_content %></td>
		<td><%= book.total_page %></td>
		<td><%= book.bookTopic(Integer(book.topic)) %></td>
		<td><%= book.quantity %></td>
		<td><%= book.current_quantity %></td>
		<td><a href="/books/<%= book.id%>/edit">
		<div class="text-warning">
			Edit
		</div></a></td>
	</tr>
	<% end %>
</table>