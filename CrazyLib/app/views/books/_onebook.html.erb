<link href="http://fonts.googleapis.com/css?family=Berkshire Swash&subset=latin" rel="stylesheet" type="text/css">
<div class="slideshow">
	<% @slides = Book.find(:all,:conditions=>{:topic=>params[:topic]});%>
	<% @book =  Book.find(:all,:conditions=>{:id=>params[:id]});%>
	<div class="slidesContainer">
		<div>
			<% i=0;%>
			<%@slides.each do |slide|%>
			<%if(i%6==0)%>
			<div class="slide" >
				<%end%>
				<li class="span2">
					<a href="view?topic=<%= slide.topic%>&id=<%= slide.id%>" class="thumbnail" style="margin-bottom:5px;"> <img src="../assets/<%= slide.image_url%>" alt=""></img> </a>
				</li>
				<%if(i%6==5)%>
			</div>
			<%end%>
			<% i=i+1%>
			<%end%>
		</div>
	</div>
</div>
</div>
