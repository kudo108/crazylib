 <% if @books%>
 <div class="text-info">
 	<%=t :found%> <%=@books.length%> <%=t :result, :count => @books.length%>.
 </div>
  <table class="table table-hover">
              <thead>
                <tr>
                  <th><%=t :title%></th>
                  <th><%=t :author%></th>
                </tr>
              </thead>
              <tbody>
              <% @books.each do |book| %>          
                <tr>  
                  <td class="tooltip-target" id="example-target-<%=book.id%>" ><%= link_to book.title, 
                      :action => 'view',:topic=>book.topic ,:id => book.id  %>
                      <img class="tooltip-content" id='example-content-<%=book.id%>' style="display:none;position:absolute;"src="../assets/<%=book.image_url%>" width="150" height="150"></img>
                      </td>
                  <td><%=book.author%>
                  </td>
                </tr>
              <% end %>              
              </tbody>
            </table>
  <% else %>
<% end%>
