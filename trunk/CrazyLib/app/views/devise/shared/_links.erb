<%- if controller_name != 'sessions' %> 
   <%link = new_session_path(resource_name) + "?locale=" + params[:locale]%>
  <%= link_to (t :login), link %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%link = new_registration_path(resource_name) + "?locale=" + params[:locale]%>
  <%= link_to (t :register), link %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%link = new_password_path(resource_name) + "?locale=" + params[:locale]%>
  <%= link_to (t :forgot_pass), link %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%link = new_confirmation_path(resource_name) + "?locale=" + params[:locale]%>
  <%= link_to (t :conf_instruction), link %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%link = new_unlock_path(resource_name) + "?locale=" + params[:locale]%>
  <%= link_to (t :unlock_instruction), link %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  	<%
  		url = (t :sign_in_with) + "#{provider.to_s.titleize}"
  		link = omniauth_authorize_path(resource_name, provider) + "?locale=" + params[:locale]
  	%>
    <%= link_to url, link %><br />
  <% end -%>
<% end -%>