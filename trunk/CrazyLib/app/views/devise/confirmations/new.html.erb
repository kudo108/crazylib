<h2>Resend confirmation instructions</h2>

<%= form_for(resource, :as => resource_name, :url => (confirmation_path(resource_name)+"?locale="+params[:locale]), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label t :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.submit t :resend %></div>
<% end %>

<%= render "devise/shared/links" %>
