%tr
  %td
    %a{:href=>"/books/view?topic=#{transaction.getBook.topic}&id=#{transaction.getBook.id}"}= transaction.getBook.title
  %td
    %a{:href=>"/users/#{transaction.getUser.id}"}= transaction.getUser.email
  %td= transaction.day_borrow
  %td= transaction.day_return
  %td= transaction.getStatus
  - if transaction.status == 1
    %td
      %a.btn{href: "/transactions/receive?transactionid=#{transaction.id}"} Received
  - elsif transaction.status == 2
    %td
      %a.btn{href: "/transactions/return?transactionid=#{transaction.id}"} Returned
  - else
    %td
